<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/my_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestChatApp"
        tools:targetApi="31">
        <activity
            android:name=".pages.ChatMessangerPage"
            android:exported="true"
            android:theme="@style/Theme.TestChatApp.noActionCustomBar">
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.UsersChatListActivity"
            android:exported="true"
            android:theme="@style/Theme.TestChatApp.noActionCustomBar">

        </activity>
        <activity
            android:name=".pages.SignUpActivity"
            android:exported="true"></activity>
        <activity
            android:name=".pages.LoginActivityScreen"
            android:exported="true"
            android:theme="@style/Theme.TestChatApp.noActionCustomBar"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>