<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ly_root_sender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/sound_sender_background"
        android:layoutDirection="ltr"
        >

        <Button
            android:id="@+id/btn_send"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/play_icon"
            android:layout_gravity="start|center"
            />
          <com.example.testchatapp.featuer_chat.presentation.activites.chat_massenger_activity.WaveForm
              android:id="@+id/play_wave_form__sender"
              android:layout_width="200dp"
              android:layout_height="50dp"
              android:layout_gravity="center"
              android:layout_margin="10dp"
              />
        <TextView
            android:id="@+id/tv_voice_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/time_voice"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>